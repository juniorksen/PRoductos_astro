---
const currentPath = Astro.url.pathname;
---

<div class="hidden md:flex flex-col w-64 h-screen bg-gray-900">
    <div class="flex items-center justify-center h-24 bg-gray-900">
        <span class="text-white font-bold uppercase">BiuSchool</span>
    </div>
    <div class="flex flex-col flex-1 overflow-y-auto">
        <nav class="flex-1 px-2 py-4 bg-gray-800">
            <a 
                href="/dashboard" 
                class={`flex items-center px-4 py-2 text-gray-100 hover:bg-gray-700 ${currentPath === '/dashboard' ? 'bg-gray-700' : ''}`}
            >   
                Dashboard
            </a>
            <a 
                href="/messages" 
                class={`flex items-center px-4 py-2 mt-2 text-gray-100 hover:bg-gray-700 ${currentPath === '/messages' ? 'bg-gray-700' : ''}`}
            >
                Messages
            </a>
            <a 
                href="/settings" 
                class={`flex items-center px-4 py-2 mt-2 text-gray-100 hover:bg-gray-700 ${currentPath === '/settings' ? 'bg-gray-700' : ''}`}
            >
                Settings
            </a>
        </nav>
    </div>
</div>
